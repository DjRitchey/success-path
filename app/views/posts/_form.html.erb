<%= form_for @post do |f| %>
  <%= f.hidden_field :user_id, :value => @user.id %>
    <% if @post.errors.any? %>

    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title, autofocus: true, autocomplete: "off" %>
</div>

<div class="field">
  <%= f.label :subtitle %><br />
  <%= f.text_field :subtitle, autofocus: true, autocomplete: "off" %>
</div>

<div class="field">
  <%= f.label :content %><br />
  <%= f.text_area :content, autofocus: true, autocomplete: "off" %>
</div>

<div class="field">
  <%= f.label :attachments %><br />
  <%= f.file_field :data %>
</div>


<div class="field">
  <%= f.label :categories %><br />
  <%= f.collection_select(:category_ids, Category.all, :id, :tag) %>
    <%= f.fields_for :categories, @post.categories.build do |new_tag| %>
      <%= new_tag.text_field :tag %>
    <% end %>
</div>

<%= f.submit "Click to submit!" %>
<% end %>

<h1>Post Index</h1>

<% @posts.each do |post| %>
  <%= post.title %>
  <%= post.subtitle %>
  <%= "By: #{User.find_by(id: post.user_id).username}" %> <br/>
  <%= post.content %> <br  />

  <% if post.image.url != '/images/original/missing.png' %>
    <%= link_to image_tag(post.image.url, class: 'media-object'), post.image.url, target: '_blank' %>
  <% end %>

<p>
  Tags: <% post.categories.each do |category| %>
   <%= category.tag %>
  <% end %>

  </p>

  <%= link_to "Edit", edit_post_path(post) %>
  <%= link_to "Delete", post_path(post), :method => "DELETE" %>
<% end %>
